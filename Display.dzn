extern String $std::string$;

interface iOutput {
	in void turnOn();
	in void turnOff();
	in void output(in String output);
	
	behaviour {
		enum State {On, Off};
		State state = State.Off;
		
		[state.Off] {
			on turnOn: state = State.On;
			on turnOff: {}
			on output: illegal;
		}
		
		[state.On] {
			on turnOn: illegal;
			on turnOff: state = State.Off;
			on output: {}
		}
	}
}

component Display {
	provides iOutput port;
}